<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="493dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/CallPhoneOnDial"
            android:layout_width="401dp"
            android:layout_height="wrap_content"
            android:text="CallPhoneOnDial"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="127dp" />

        <Button
            android:id="@+id/CallPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CallPhone" />

        <Button
            android:id="@+id/CallURL"
            android:layout_width="401dp"
            android:layout_height="wrap_content"
            android:text="CallURL"
            tools:layout_editor_absoluteX="230dp"
            tools:layout_editor_absoluteY="44dp" />

        <Button
            android:id="@+id/CallNewActivity"
            android:layout_width="401dp"
            android:layout_height="wrap_content"
            android:text="CallNewActivity"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="8dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>